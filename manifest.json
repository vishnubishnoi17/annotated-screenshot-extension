{
  "manifest_version": 3,
  "name": "Pro Screenshot Annotator",
  "version": "2.0.0",
  "description": "Professional screenshot tool with advanced annotation features - arrows, text, shapes, blur, highlight & more! ",
  
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "downloads",
    "activeTab",
    "contextMenus"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/serviceWorker.js"
  },

  "action":  {
    "default_popup":  "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon128.png",
      "48":  "assets/icons/icon128.png",
      "128": "assets/icons/icon128.png"
    }
  },

  "icons": {
    "16": "assets/icons/icon128.png",
    "48":  "assets/icons/icon128.png",
    "128": "assets/icons/icon128.png"
  },

  "commands": {
    "capture-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Capture full page screenshot"
    }
  }
}